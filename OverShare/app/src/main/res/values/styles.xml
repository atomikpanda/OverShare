<resources>
    <attr name="colorIcons" format="reference" />
    <attr name="colorFragmentBackground" format="color" />
    <attr name="colorEmptyStateText" format="reference" />
    <attr name="colorEmptyStateIconBg" format="reference" />
    <attr name="colorEmptyStateIconFg" format="reference" />
    <attr name="colorTabIndicator" format="reference" />
    <attr name="colorFieldLink" format="reference" />
    <attr name="colorCardBg" format="reference" />
    <attr name="colorTabTextSelected" format="reference" />
    <attr name="coloredIconLarge" format="reference" />
    <attr name="mainOrange" format="reference" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorIcons">@color/iconsGray</item>
        <item name="colorFragmentBackground">@color/fragmentBg</item>
        <item name="colorEmptyStateText">@color/emptyStateTextColor</item>
        <item name="colorTabIndicator">@android:color/white</item>
        <item name="colorEmptyStateIconBg">@color/colorEmptyStateIconBg</item>
        <item name="colorEmptyStateIconFg">@color/colorEmptyStateIconFg</item>
        <item name="colorFieldLink">@color/colorFieldLink</item>
        <item name="colorCardBg">@color/colorCardBg</item>
        <item name="colorTabTextSelected">@android:color/white</item>
        <item name="android:windowBackground">@color/windowBg</item>
        <item name="coloredIconLarge">?attr/colorAccent</item>
        <item name="mainOrange">@color/colorPrimary</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">#282828</item>
        <item name="colorPrimaryDark">#1f1f1f</item>
        <item name="colorAccent">#f57d46</item>
        <item name="colorIcons">@color/iconsGrayDark</item>
        <item name="colorFragmentBackground">#1d1d1d</item>
        <item name="colorEmptyStateText">@color/emptyStateTextColorDark</item>
        <item name="colorTabIndicator">?attr/colorAccent</item>
        <item name="colorFieldLink">@color/colorFieldLinkDark</item>
        <item name="colorCardBg">@color/colorCardBgDark</item>
        <item name="colorTabTextSelected">?attr/colorAccent</item>
        <item name="android:windowBackground">@color/windowBgDark</item>
        <item name="coloredIconLarge">?attr/colorAccent</item>
        <item name="mainOrange">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EmptyStateText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorEmptyStateText</item>
    </style>

    <style name="iconsCardGray">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:tint">?attr/colorIcons</item>
    </style>

    <style name="iconsCardGray.Bottom">
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="AccountHeaderText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
</resources>
